
public class DeepestNodeInTheTree {

	public static Node resultNode;
	public static int resultLength = Integer.MIN_VALUE;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Node node1 = new Node(1);
		node1 = buildTree(node1);
		System.out.println();
		// DeepCopy.inorderTraversalIterative(node1);
		
		
	}
	
	public static Node deepestNode(Node node, int length){		
		if(node == null){			
			return null;
		}else{			
			node = deepestNode(node.prev, length + 1);
			if(length > resultLength){
				resultNode = node;
				resultLength = length;				
			}
			node = deepestNode(node.next, length + 1);	
			if(length > resultLength){
				resultNode = node;
				resultLength = length;				
			}
		}
		return node;
	}

public static Node buildTree(Node node){
		
		Node node2 = new Node(2);
		Node node3 = new Node(3);
		Node node4 = new Node(4);
		Node node5 = new Node(5);
		Node node6 = new Node(6);
		Node node7 = new Node(7);
		Node node8 = new Node(8);
		Node node9 = new Node(9);
		
		node.prev = node2;
		node.next = node3;
		node2.prev = node4;
		node2.next = node5;
		node3.prev = node6;
		node3.next = node7;
		node4.prev = node8;
		node4.next = node9;
		
		/*Node node2 = new Node(5);
		Node node3 = new Node(25);
		Node node4 = new Node(3);
		Node node5 = new Node(9);
		Node node6 = new Node(12);
		Node node7 = new Node(35);
		Node node8 = new Node(2);
		Node node9 = new Node(1);
		
		node.prev = node2;
		node.next = node3;
		node2.prev = node4;
		node2.next = node5;
		node3.prev = node6;
		node3.next = node7;
		node4.prev = node8;
		node8.prev = node9;
		*/
		return node;
	}
}
