public class LinkedList {
	public Node first;
	public int size;
	
	public LinkedList(){
		this.first = null;		
	}
	
	public boolean isEmpty(){
		return first == null;
	}
	
	public int getSize(){
		if(this.isEmpty())
			return 0;
		else
			return this.size;
	}	
	
	public void add(int n){
		Node newNode = new Node(n);
		Node temp = null;
		if(this.isEmpty()){
			first = newNode;
		}else{
			temp = first;
			first = newNode;
			newNode.next = temp;
		}
	}
	
	public Node remove(int n){
		Node temp = first;
		if(temp.key == n){
			first = null;
			return temp;
		}else{
			while(temp.key!= n){
				temp = temp.next;
			}
			return temp;
		}
	}
	
}
